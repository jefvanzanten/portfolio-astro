---
import Layout from "../Layout.astro";
import CommitWidget from "../components/CommitWidget/CommitWidget.astro";
import ProjectCard from "../components/ProjectCard/ProjectCard.astro";
import { projects } from "../data.ts";
const filteredProjects = projects.filter((project) => project.highlighted);
---

<Layout
  title="Home - jefvanzanten.dev"
  description="Portfolio van Jef van Zanten - Full-stack developer met focus op React, TypeScript en mobile development."
>
  <div class="content-container">
    <section class="introduction">
      <div class="introduction-content">
        <h1>Full-stack developer</h1>
        <p>
          Hey, mijn naam is Jef. Momenteel volg ik de studie Software
          Development (HBO Associate Degree).
          <br />
          <br />
          Ik wissel met programmeren tussen frontend, backend en mobile projecten,
          zodat mijn kennis en vaardigheden op elk vlak blijven ontwikkelen.
        </p>
      </div>
    </section>
    <CommitWidget />
    <section class="featured-projects-container">
      <div class="title">
        <span class="line"></span>
        <h1>Featured Projects</h1>
        <span class="line"></span>
      </div>
      <div
        class="featured-projects-list"
        style={{ "--total-cards": filteredProjects.length }}
      >
        {
          filteredProjects.map((project, index) => (
            <ProjectCard project={project} index={index} />
          ))
        }
      </div>
    </section>
  </div>
</Layout>

<style>
  .content-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    z-index: 0;
    overflow: hidden;

    @media screen and (max-width: 940px) {
      padding: 0 10vw;
    }
  }

  /* Introduction section */

  .introduction {
    padding: 4em;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;

    @media screen and (max-width: 940px) {
      min-height: 20vh;
    }

    @media screen and (min-width: 1800px) {
      min-height: 10vh;
    }
  }

  .introduction-content {
    display: flex;
    flex-direction: column;
    width: fit-content;

    h1 {
      font-family: "JetBrains Mono", monospace;
      font-weight: 400;
      font-size: 1.8rem;
      padding: 1em 0;
    }

    p {
      font-size: 1.1rem;
      margin: 0;
      color: var(--text-muted);
      text-wrap: wrap;
      max-width: 32rem;
      padding: 0;

      @media screen and (max-width: 940px) {
        font-size: 1rem;
        max-width: 24rem;
      }

      @media screen and (min-width: 1800px) {
        font-size: 0.9rem;
        max-width: 28rem;
      }
    }
  }

  /* Featured Projects */

  .featured-projects-container {
    display: flex;
    flex-direction: column;
    gap: 2em;
    padding: 5vh 0;

    @media screen and (orientation: portrait) and (max-width: 1024px) {
      align-items: center;
    }
  }

  .featured-projects-list {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 2em;
    --card-width: 300px;

    @media screen and (orientation: portrait) and (max-width: 1024px) {
      width: 80%;
    }
  }
</style>
